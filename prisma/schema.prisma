// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid()) @map("_id")
  name  String
  email String
}

model Category {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  createdAt DateTime @default(now())
}

model Product {
  id            String      @id @default(cuid()) @map("_id")
  name          String
  shortName     String
  price         Float
  description   String
  features      String
  isNew         Boolean
  category      String
  productImage  Image
  cartImage     String
  includedItems Item[]
  galleryImages GalleryImgs
  createdAt     DateTime    @updatedAt
}

type GalleryImgs {
  img1 String
  img2 String
  img3 String
}

type Image {
  desktop String?
  tablet  String?
  mobile  String?
}

type Item {
  item     String
  quantity Int
}
