// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid()) @map("_id")
  name  String
  email String
}

model Category {
  id        String    @id @default(cuid()) @map("_id")
  name      String
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id              String         @id @default(cuid()) @map("_id")
  name            String
  shortName       String
  Category        Category?      @relation(fields: [categoryId], references: [id])
  categoryId      String?
  image           ProductImage   @relation(fields: [imageId], references: [id])
  imageId         String
  cartImage       String?
  categoryImage   CategoryImage  @relation(fields: [categoryImageId], references: [id])
  categoryImageId String
  isNew           Boolean
  price           Float
  description     String
  features        String
  // includedItems   Item[]
  // galleryImages   GalleryImage[]!
  createdAt       DateTime       @updatedAt
}

model ProductImage {
  id      String    @id @default(cuid()) @map("_id")
  product String
  mobile  String
  tablet  String
  desktop String
  Product Product[]
}

model CategoryImage {
  id      String    @id @default(cuid()) @map("_id")
  product String
  mobile  String
  tablet  String
  desktop String
  Product Product[]
}

model Item {
  id        String   @id @default(cuid()) @map("_id")
  item      String
  quantity  Int
  // Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model GalleryImage {
  id        String   @id @default(cuid()) @map("_id")
  product   String
  mobile    String
  tablet    String
  desktop   String
  // Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}
